generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model WatingPlayer {
  id           Int      @id @default(autoincrement())
  place        Int
  playerId     Int?
  watingPlayer Player?  @relation(fields: [playerId], references: [id])
  clubId       Int?
  club         Club?    @relation(fields: [clubId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PlayingGames {
  id          Int      @id @default(autoincrement())
  courtNumber Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Player {
  id            Int            @id @default(autoincrement())
  name          String
  avatar        String?
  age           Int?
  grade         String?
  mmr           Int            @default(1000)
  club          Club?          @relation(fields: [clubId], references: [id])
  clubId        Int?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  watingPlayers WatingPlayer[]
}

model Club {
  id             Int            @id @default(autoincrement())
  name           String
  players        Player[]
  WaitingPlayers WatingPlayer[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Record {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  winnerId  Int
  loserId   Int
}
